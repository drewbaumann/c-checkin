<h1>Editing Member</h1>

<% form_for :member, @member, :url => member_path, :html => { :multipart => true, :method => :put } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address, :size => '22x5' %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
      <%= f.label :avatar %><br />
      <%= image_tag @member.avatar.url, {:class => 'middle'} %><br/>
      <%= render :partial => "avatar_loader", :locals => {:f => f} %>
  </p>
  <p>
    <%= f.label :coloft_id, "Coloft ID" %><br />
    <%= f.text_field :coloft_id %>
  </p>
  <p>
    <%= plan_select_for @member%><br />
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @member %> |
<%= link_to 'Back', members_path %>