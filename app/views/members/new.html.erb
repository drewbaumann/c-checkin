<h1>New Colofter</h1>

<% form_for :member, @member, :url => members_path, :html => { :multipart => true, :method => :post } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address, :size => '22x5' %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
      <%= f.label :avatar %><br />
      <%= render :partial => "avatar_loader", :locals => {:f => f} %>
  </p>
  <p>
    <%= f.label :coloft_id, "Coloft ID" %><br />
    <%= f.text_field :coloft_id %>
  </p>
  <p>
      <%= f.label :plan %><br />
      <%= plan_select_for @member%><br />
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', members_path %>