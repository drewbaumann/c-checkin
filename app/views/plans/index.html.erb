<h1>Listing plans</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Days</th>
    <th>Price</th>

  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%=h plan.name %></td>
    <td><%=h plan.days %></td>
    <td><%=h number_to_currency(plan.price) %></td>

    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New plan', new_plan_path %>