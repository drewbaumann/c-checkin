<h1>Coloft Managers</h1>

<table>
  <tr>
    <th>Login</th>   
    <th>Admin</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.admin %></td>
    
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_account_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Coloft Manager', new_account_path %>